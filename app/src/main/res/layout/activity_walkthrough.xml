<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WalkThroughActivity"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/uiIvRound"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"
        android:src="@drawable/img_progress"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvMessage"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/str_explain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@id/uiBtnNext"
         />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uiBtnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pink_700"
        android:text="@string/str_next"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uiIvImage"
        android:src="@drawable/ic_walk"
        android:tint="@color/pink_200"
        app:layout_constraintTop_toTopOf="@id/uiIvRound"
        app:layout_constraintStart_toStartOf="@id/uiIvRound"
        app:layout_constraintEnd_toEndOf="@id/uiIvRound"
        app:layout_constraintBottom_toBottomOf="@id/uiIvRound"/>



</androidx.constraintlayout.widget.ConstraintLayout>